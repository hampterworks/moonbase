{
  "name": "@moonbase/moonbase",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/moonbase/src",
  "projectType": "application",
  "tags": ["npm:private"],
  "implicitDependencies": ["ui-components"],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{projectRoot}/.next"],
      "defaultConfiguration": "production",
      "dependsOn": ["^build"],
      "options": {
        "outputPath": "dist/apps/moonbase"
      },
      "configurations": {
        "development": {
          "outputPath": "dist/apps/moonbase"
        },
        "production": {
          "outputPath": "dist/apps/moonbase"
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "outputs": ["{projectRoot}/out"],
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "@moonbase/moonbase:build:production"
      }
    },
    "build-static": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/out"],
      "dependsOn": ["^build"],
      "options": {
        "commands": [
          "nx build @moonbase/moonbase --configuration=production",
          "nx export @moonbase/moonbase"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "@moonbase/moonbase:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "@moonbase/moonbase:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "@moonbase/moonbase:build:production",
          "dev": false
        }
      }
    },
    "dev": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "@moonbase/moonbase:build",
        "dev": true
      }
    },
    "start": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "@moonbase/moonbase:build",
        "dev": false
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/moonbase/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/moonbase"],
      "options": {
        "jestConfig": "apps/moonbase/jest.config.ts"
      }
    }
  }
}
